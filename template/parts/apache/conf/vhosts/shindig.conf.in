#
# Virtual Hosts
#

<VirtualHost *:${config:apache-shindig-port}>
    ServerAdmin murcs@studivz.net
    ServerName svz.shindig.local
	ServerAlias svz.shindig.localhost
	ServerAlias svz.shindig.${hostname}
	ServerAlias svz.shindig.${hostname}.${config:domain}
	ServerAlias svz.shindig.lan.${hostname}
	ServerAlias svz.shindig.lan.${hostname}.${config:domain}
	ServerAlias svz.shindig.wlan.${hostname}
	ServerAlias svz.shindig.wlan.${hostname}.${config:domain}
	
    DocumentRoot ${buildout:directory}/Sites/Shindig/php

    <Directory ${buildout:directory}/Sites/Shindig/php>
        DirectoryIndex index.php
        Options +FollowSymLinks All
        AllowOverride all
        Allow from all
        php_value auto_prepend_file ${buildout:directory}/Sites/Shindig/php/autoprepend/localhost/svz.php
    </Directory>

    ErrorLog ${buildout:directory}/parts/apache/logs/shindig_error.log
    CustomLog ${buildout:directory}/parts/apache/logs/shindig_access.log common
</VirtualHost>

